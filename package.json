{
  "name": "sameer-portfolio",
  "version": "0.1.0",
  "description": "Portfolio Website for Sameer",
  "author": "qeleb",
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">=18.x"
  },
  "browserslist": {
    "production": [
      "firefox >=103",
      "chrome >=88",
      "safari >=14.1",
      "ios_saf >=14.5"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": "eslint --fix",
    "*.{css,scss,sass}": [
      "stylelint --fix",
      "prettier --write --list-different"
    ]
  },
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "vite build",
    "build:analyze": "ANALYZE=true && vite build",
    "test": "vitest run --coverage",
    "test:ui": "vitest --coverage --ui",
    "lint": "eslint src && stylelint src/**/*.scss",
    "lint:fix": "eslint --fix src && stylelint --fix src/**/*.scss",
    "deploy": "gh-pages -d dist",
    "preinstall": "npx only-allow yarn",
    "postinstall": "husky"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.5",
    "@testing-library/jest-dom": "^6.3.0",
    "@types/node": "^20.11.10",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-regexp": "^2.2.0",
    "eslint-plugin-solid": "^0.13.1",
    "eslint-plugin-testing-library": "^6.2.0",
    "eslint-plugin-vitest": "^0.3.20",
    "gh-pages": "^6.1.1",
    "husky": "^9.0.7",
    "jsdom": "^24.0.0",
    "lightningcss": "^1.23.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.70.0",
    "stylelint": "^16.2.0",
    "stylelint-config-hudochenkov": "^10.0.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.1",
    "stylelint-order": "^6.0.4",
    "terser": "^5.27.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-optimize-css-modules": "^1.0.6",
    "vite-plugin-sass-dts": "^1.3.17",
    "vite-plugin-solid": "2.8.2",
    "vite-plugin-svgo": "^1.4.0",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "solid-js": "^1.8.12"
  },
  "resolutions": {
    "svgo": "^3.2.0"
  },
  "packageManager": "yarn@3.7.0"
}
